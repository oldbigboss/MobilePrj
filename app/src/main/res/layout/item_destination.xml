<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="fun.veres.mobileprj.domain.destination.DestinationBusiness" />
        <variable
            name="viewmodel"
            type="fun.veres.mobileprj.ui.destination.SetupDestinationViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/mSmall"
        android:onClick="@{() -> viewmodel.onDestinationClicked(item)}">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{item.name}"
            android:textColor="@color/black"
            android:textSize="@dimen/textSizeRegular"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Барнаул, Алтайский край!"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>